{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
